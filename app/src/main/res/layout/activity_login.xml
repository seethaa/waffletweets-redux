<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_alignTop="@+id/splashscreen"
android:background="@color/twitter_blue"
android:gravity="center_vertical"
android:orientation="vertical">

<ImageView
    android:id="@+id/splashscreen"
    android:background="@drawable/img_border_circle"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignLeft="@+id/textView"
    android:layout_alignStart="@+id/textView"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:src="@drawable/waffletweetslogo" />

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/splashscreen"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:fontFamily="Arial"
    android:visibility="gone"
    android:text="WaffleTweets"
    android:textColor="@color/white"
    android:textSize="30dp"
    android:textStyle="bold" />

<Button
    android:layout_width="244dp"
    android:backgroundTint="@color/white"
    android:textColor="@color/twitter_blue"
    android:background="@drawable/img_borderbutton"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp"
    android:onClick="loginToRest"
    android:text="@string/login_label"
    android:layout_gravity="center_horizontal" />

</LinearLayout>
